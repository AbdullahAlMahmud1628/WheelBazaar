<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@v1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="script/script.js"></script>
    <link rel="stylesheet" href="CSS/style.css">
    <script>
        function edit() {
            window.location.href = '/editInfo';
        }
    </script>
</head>
<body>
    <%-include('layouts/navbar2.ejs',{authorized: authorized,user_info:user_info}) %>

    <main>
        <div class="container mt-4">
            <div class="text-center bg-dark text-white p-3">
                <h1>My Information</h1>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h2>Personal Details</h2>
                    <div class="form-group">
                        <label for="id">ID:</label>
                        <p class="form-control-static"><%=user_info[0].ID%></p>
                    </div>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <p class="form-control-static"><%=user_info[0].NAME%></p>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <p class="form-control-static"><%=user_info[0].EMAIL%></p>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <p class="form-control-static" id="phone"><%=user_info[0].PHONE_NUMBER%></p>
                    </div>
                </div>

                <%if(location[0].LOCATION_ID == 0) {%>
                    <div class="col-md-6">
                        <h2>Location</h2>
                        <div class="form-group">
                            <label for="country">Country:</label>
                            <p class="form-control-static">Not Updated</p>
                        </div>
                        <div class="form-group">
                            <label for="division">Division:</label>
                            <p class="form-control-static">Not Updated</p>
                        </div>
                        <div class="form-group">
                            <label for="city">City:</label>
                            <p class="form-control-static">Not Updated</p>
                        </div>
                    </div>
                <%}%>
                <%if(location[0].LOCATION_ID != 0) {%>
                    <div class="col-md-6">
                        <h2>Location</h2>
                        <div class="form-group">
                            <label for="country">Country:</label>
                            <p class="form-control-static"><%=location[0].COUNTRY%></p>
                        </div>
                        <div class="form-group">
                            <label for="division">Division:</label>
                            <p class="form-control-static"><%=location[0].DIVISION%></p>
                        </div>
                        <div class="form-group">
                            <label for="city">City:</label>
                            <p class="form-control-static"><%=location[0].CITY%></p>
                        </div>
                    </div>
                <%}%>
            </div>

            <div class="col-md-6 mt-4">
                <button class="btn btn-danger" onclick="edit()">Update Information</button>
            </div>
    
        </div>
    </main>
    <%-include('layouts/footer.ejs',{})%>
    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        var dbPhoneNumber = '<%=user_info[0].PHONE_NUMBER%>'
        var displayPhoneNumber = (dbPhoneNumber.charAt(0) !== '0') ? '0' + dbPhoneNumber : dbPhoneNumber;
        document.getElementById('phone').textContent = displayPhoneNumber
    </script>
</body>
</html>

