<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Box with Data</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<style>
    /* Style for the box */
    .box {
        width: 300px;
        height: 200px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 20px;
        margin: 50px auto;
        text-align: center;
        font-family: 'Poppins', sans-serif;
        font-size: 32px; /* Double the font size */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

    .box:hover {
        transform: scale(1.05);
    }

    /* Gradient effect */
    .box::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, #ffffff, #f8f9fa, #ffffff);
        opacity: 0.2;
        pointer-events: none;
        border-radius: 10px;
    }

    /* Style for the larger font */
    .larger-font {
        font-size: 48px; /* Double the font size */
    }

    /* Style for the headline */
    .headline {
        margin-bottom: 20px; /* Increase margin for better spacing */
    }
</style>
</head>
<body>

<div id="dataBox" class="box">
    <!-- Headline for total sales this month -->
    <div class="headline" style="color: #2b3035;">Total sales this month:</div>
    <!-- Headline for total sales from backend (to be replaced with data) -->
    <div id="totalSales" class="larger-font" style="color: #e4b144;"></div>
</div>

<script>
    var dataBox = document.getElementById("dataBox");

    function addDataToBox(data) {
        document.getElementById("totalSales").innerText = data;
    }

    // Example data for total sales from backend (to be replaced with actual data)
    var totalSalesData = "100,000"; // Example data

    // Call the function to add data to the box
    addDataToBox(totalSalesData);
</script>

</body>
</html>
